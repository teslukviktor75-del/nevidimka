<script>
  const tg = window.Telegram.WebApp;
  tg.ready();
  tg.expand();

  function clean(s){ return (s||"").toString().trim(); }

  document.getElementById("save").onclick = () => {
    const name = clean(document.getElementById("name").value);
    const age  = clean(document.getElementById("age").value);
    const city = clean(document.getElementById("city").value);
    const about= clean(document.getElementById("about").value);

    if(!name || !age || !city){
      tg.showAlert("–ó–∞–ø–æ–≤–Ω–∏ —ñ–º‚Äô—è, –≤—ñ–∫ —ñ –º—ñ—Å—Ç–æ.");
      return;
    }
    if(!/^\d+$/.test(age)){
      tg.showAlert("–í—ñ–∫ –º–∞—î –±—É—Ç–∏ —á–∏—Å–ª–æ–º.");
      return;
    }
    const a = parseInt(age,10);
    if(a < 14 || a > 99){
      tg.showAlert("–í—ñ–∫ –º–∞—î –±—É—Ç–∏ 14‚Äì99.");
      return;
    }

    const payload = {name, age:a, city, about};
    tg.sendData(JSON.stringify(payload));
    tg.close(); // –∑–∞–∫—Ä–∏—Ç–∏ mini app –ø—ñ—Å–ª—è –≤—ñ–¥–ø—Ä–∞–≤–∫–∏
  };
</script>
